<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:background="@android:color/white"
    >


    <TextView
        android:id="@+id/txtPickupInfo"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:drawablePadding="5dip"
        android:text="@string/pickup_here"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_baseline_account_balance_24" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtPickupSnippet"
        android:text="@string/optional"
        app:drawableLeftCompat="@drawable/ic_baseline_info_24"
        android:singleLine="false"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:background="@drawable/back"

    >


    <TextView
        android:id="@+id/txtPickupInfo"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:drawablePadding="1sp"
        android:gravity="center_horizontal"
        android:text="@string/pickup_here"
        android:textStyle="bold"
        android:background="@drawable/top"
        app:drawableTopCompat="@drawable/ic_baseline_account_balance_24" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/txtPickupSnippet"
        android:text="@string/optional"
        android:gravity="center_horizontal"
        android:background="@drawable/back"
        app:drawableTopCompat="@drawable/ic_baseline_info_24"
        android:singleLine="false"
        />

</LinearLayout>